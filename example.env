PORT=3000
NODE_ENV=production

# JWT — secreto largo y aleatorio para firmar tokens de acceso
JWT_SECRET=pon_aqui_una_clave_secreta_muy_larga_y_aleatoria

# Contraseña inicial del usuario admin (solo se usa la primera vez)
INITIAL_ADMIN_PASSWORD=pon_aqui_una_contraseña_segura

# Orígenes permitidos para CORS (separados por coma)
# Deja vacío para solo permitir la app de escritorio
# Ejemplo: ALLOWED_ORIGINS=https://mi-panel.com,https://otro-sitio.com
ALLOWED_ORIGINS=

# Base de datos (PostgreSQL en Supabase)
DB_HOST=tu_host_de_supabase
DB_PORT=5432
DB_NAME=postgres
DB_USER=tu_usuario_de_supabase
DB_PASSWORD=tu_contraseña_de_supabase
